%main.container{ :style => "width: 400px; margin-top: 100px; padding: 0"}
  %h2 Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-container" }) do |f|
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@email.com"
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "current-password", placeholder: "password123"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Log in", class: 'btn btn-md btn-secondary'
      = render "traders/shared/links"
